extends ../index

block content
  div.upload__container
    div.upload__video
      video#preview
      button#actionBtn Start Recording
    if errorMessage 
      span=errorMessage
    form(method="POST", action="/api/videos/upload", enctype="multipart/form-data")
      label(for="video") Video File
      //- id: label에서 사용, name: multer에서 사용
      input(
        type="file", 
        required, 
        accept="video/*", 
        id="video", 
        name="video", 
      )
      label(for="thumbnail") Thumbnail File
      input(
        type="file", 
        required, 
        accept="image/*", 
        id="thumbnail", 
        name="thumbnail", 
      )
      input(
        name="title", 
        placeholder="Title", 
        type="text", 
        required, 
        maxLength=80
      )
      input(
        name="description", 
        placeholder="Description", 
        type="text", 
        required, 
        minLength=1
      )
      input(
        name="hashtags", 
        placeholder="Hashtags, seperated by comma.", 
        type="text"
        required, 
      )
      input(
        type="submit", 
        value="Upload Video"
      )

block scripts
  script(src="/static/js/recorder.js")