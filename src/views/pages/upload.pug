extends ../index

block content
  if errorMessage 
    span=errorMessage
  form(method="POST", action="/api/videos/upload", enctype="multipart/form-data")
    label(for="video") Video File
    //- id: label에서 사용, name: multer에서 사용
    input(
      type="file", 
      accept="video/*", 
      id="video", 
      name="video", 
    )
    input(
      name="title", 
      placeholder="Title", 
      type="text", 
      required, 
      maxLength=80
    )
    input(
      name="description", 
      placeholder="Description", 
      type="text", 
      required, 
      minLength=10)
    input(
      name="hashtags", 
      placeholder="Hashtags, seperated by comma.", 
      type="text"
      required, 
    )
    input(
      type="submit", 
      value="Upload Video"
    )