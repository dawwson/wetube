extends ../index

block content 
  if errorMessage
    span=errorMessage
  form(method="POST", action="/api/login")
    input(
      name="username", 
      placeholder="Username",
      type="text", 
      required
    )
    input(
      name="password", 
      placeholder="Password",
      type="password", 
      required
    )
    input(
      type="submit",
      value="Login"
    )
  hr
  div 
    span Don't have an account? 
    a(href="/join") Create one now &rarr;