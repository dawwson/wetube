extends ../index

block content
  form(method="POST", action="/api/users/edit", enctype="multipart/form-data").edit-profile__form
    label(for="avatar") Avatar
    input(
      type="file", 
      id="avatar",
      name="avatar",
      accept="image/*"
    )
    input(
      name="email", 
      placeholder="Email",
      type="text",
      value=user.email,
      required
    )
    input(
      name="username", 
      placeholder="Username",
      type="text", 
      value=user.username,
      required
    )
    input(
      name="name", 
      placeholder="Name",
      type="text", 
      value=user.name
      required
    )
    input(
      name="location", 
      placeholder="Location",
      type="text", 
      value=user.location
    )
    input(
      type="submit",
      value="Update Profile"
    )
    if !user.socialOnly
      div.edit-profile__password
        a(href="/users/change-password") Change Password &rarr;