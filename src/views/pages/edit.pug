extends ../index

block content 
  h4 Change Title of Video
  form(method="POST", action=`/api/videos/${video._id}/edit`)
    input(
      name="title", 
      value=video.title
      placeholder="Title", 
      required, 
      type="text", 
      maxLength=80
    )
    input(
      name="description", 
      value=video.description,
      placeholder="Description", 
      required, 
      type="text", 
      minLength=20
    )
    input(
      name="hashtags", 
      value=video.hashtags.join()
      placeholder="Hashtags, seperated by comma.", 
      required, 
      type="text"
    )
    input(value="Save", type="submit")