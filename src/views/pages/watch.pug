extends ../index

block content 
  video(
    src=`/${video.fileUrl}`,
    controls
    width="1000px" 
  )
  div
    p=video.description
    small=video.createdAt
  div
    small Uploaded by 
      a(href=`/users/${video.owner._id}`)=video.owner.name
  if user && String(video.owner) === String(user._id)
    a(href=`${video._id}/edit`) Edit Video &rarr;
    br
    a(href=`${video._id}/delete`) Delete Video &rarr;