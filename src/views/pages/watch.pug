extends ../index

block content 
  div#videoContainer
    video(
      src=`/${video.fileUrl}`,
      width="1000px" 
    )
    div#videoControls
      div
        button#play Play
        button#mute Mute
        input(
          type="range", 
          min="0", 
          max="1", 
          step="0.1"
        )#volume
        div 
          span#cuttentTime 00:00
          span  / 
          span#totalTime 00:00
        div
          input(
            type="range", 
            step="1", 
            value=0, 
            min="0"
          )#timeline
        div
          button#fullScreen Enter Full Screen
